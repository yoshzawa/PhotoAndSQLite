<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="photoAndSQLite.NavPage1" Title="TOPPAGE">
    <ContentPage.Content>

            <ScrollView  Orientation="Vertical">
            <StackLayout>

                <Button Text="MainPageに戻る"                
                        HorizontalOptions="Center" 
                        x:Name="MainPageButton"                   
                        Clicked="MainPageButton_Clicked" />

                <Button Text="写真を撮影する" 
                        FontSize="Large" 
                        HorizontalOptions="Center" 
                    
                        x:Name="pictureButton1" 
                        BorderWidth="2" 
                        BorderColor="Aqua" />

                <Button Text="写真を選択する" 
                        FontSize="Large" 
                        HorizontalOptions="Center" 
                        x:Name="pictureButton2" 
                        BorderWidth="2" 
                        BorderColor="Aqua" />


            </StackLayout>
        </ScrollView>
        
    </ContentPage.Content>
</ContentPage>